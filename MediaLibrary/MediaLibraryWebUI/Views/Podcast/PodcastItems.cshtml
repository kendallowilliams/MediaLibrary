@model (bool HasPlaylists, IOrderedEnumerable<MediaLibraryDAL.DbContexts.PodcastItem> PodcastItems)

@if (Model.PodcastItems.Any())
{
    <ul class="list-group list-group-flush">
        @foreach (var item in Model.PodcastItems.OrderByDescending(item => item.PublishDate))
        {
            <li class="list-group-item" data-episode-id="@(item.Id)">
                <div class="media">
                    <img class="mr-3 track-img" src="@(Url.Content("~/Content/images/audio.png"))" title="@(item.Title)">
                    <div class="media-body d-flex flex-column" style="overflow-x: auto">
                        <h5 class="mt-0 text-truncate" style="flex: 0 0 auto">@(item.Title)</h5>
                        <span style="flex: 0 0 auto">@(item.PublishDate)</span>
                    </div>
                    <div>
                        <button class="btn btn-sm btn-outline-secondary d-none d-lg-inline-block" data-tooltip="tooltip" title="@(item.Description)" data-placement="left"
                                data-html="true">
                            <i class="fa fa-info-circle"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" data-play-id="@(item.Id)" data-media-type="@(Enums.MediaTypes.Podcast)"
                                data-tooltip="tooltip" title="Play">
                            <i class="fa fa-play"></i>
                        </button>
                        @if (Model.HasPlaylists)
                        {
                            <button type="button" class="btn btn-sm btn-outline-secondary" data-playlist-url="@(Url.Action("AddPodcastItemToPlaylist", "Podcast"))" data-item-id="@(item.Id)"
                                    data-toggle="modal" data-target="#@(HtmlControlsRepository.AddToPlaylistModalId)" data-tooltip="tooltip" title="Add to playlist"
                                    data-playlist-type="@(nameof(UIEnums.PlaylistTabs.Podcast))">
                                <i class="fa fa-plus"></i>
                            </button>
                        }
                        <button class="btn btn-sm btn-outline-secondary" data-download-action="@(Url.Action("DownloadPodcastItem", "Podcast", new { item.Id }))"
                                data-tooltip="tooltip" title="Download episode" data-podcast-action="download"
                                @(!string.IsNullOrWhiteSpace(item.File) ? "disabled=\"disabled\"" : string.Empty)>
                            <i class="fa fa-download"></i>
                        </button>
                    </div>
                </div>
            </li>
        }
    </ul>
}
else
{
    <span>No episodes added.</span>
}
