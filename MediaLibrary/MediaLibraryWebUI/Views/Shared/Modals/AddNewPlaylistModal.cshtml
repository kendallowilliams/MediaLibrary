<div class="modal fade" id="modalNewPlaylist" tabindex="-1" role="dialog" aria-labelledby="modalNewPlaylistTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalNewPlaylistTitle">New Playlist</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formNewPlaylist" method="post" action="@Url.Action("AddPlaylist", "Playlist")">
                    <div class="form-group">
                        <label for="txtNewPlaylist">Playlist</label>
                        <input type="text" class="form-control" id="txtNewPlaylist" name="playlistName" placeholder="Playlist name">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" onclick="addNewPlaylist()">Save</button>
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" defer="defer">
    $('#modalNewPlaylist').on('show.bs.modal', function (e) {
        $('#formNewPlaylist').trigger('reset');
    })

    function addNewPlaylist() {
        $('#modalNewPlaylist').modal('hide');
        $('#loadingModal').modal('show');
        $('#formNewPlaylist').trigger('submit');
    }
</script>
