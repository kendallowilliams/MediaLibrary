@using MediaLibraryWebUI.Models.Configurations
@using MediaLibraryWebUI.Repositories

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KOW Moosic @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/js")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/popperjs")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="d-flex container flex-column" style="position: relative; height: 100vh; max-height: 100vh">
        <div class="header-content" style="flex: 0 0 auto; padding-top: 10px">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="javascript: void(0)" onclick="loadView('@(nameof(Enums.MediaPages.Home))')">
                    <img src="@(Url.Content("~/Content/images/logo.png"))" title="KOW Moosic" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#divNavbar" aria-controls="divNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="divNavbar">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" data-media-page="@(nameof(Enums.MediaPages.Music))" href="javascript: void(0)" onclick="loadView('@(nameof(Enums.MediaPages.Music))')">@(nameof(Enums.MediaPages.Music))</a>
                            <a class="nav-link d-none disabled font-italic font-weight-bold text-dark" data-media-page="@(nameof(Enums.MediaPages.Music))">@(nameof(Enums.MediaPages.Music))</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-media-page="@(nameof(Enums.MediaPages.Podcast))" href="javascript: void(0)" onclick="loadView('@(nameof(Enums.MediaPages.Podcast))')">@(nameof(Enums.MediaPages.Podcast))s</a>
                            <a class="nav-link d-none disabled font-italic font-weight-bold text-dark" data-media-page="@(nameof(Enums.MediaPages.Podcast))">@(nameof(Enums.MediaPages.Podcast))s</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-media-page="@(nameof(Enums.MediaPages.Television))" href="javascript: void(0)" onclick="loadView('@(nameof(Enums.MediaPages.Television))')">@(nameof(Enums.MediaPages.Television))</a>
                            <a class="nav-link d-none disabled font-italic font-weight-bold text-dark" data-media-page="@(nameof(Enums.MediaPages.Television))">@(nameof(Enums.MediaPages.Television))</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-media-page="@(nameof(Enums.MediaPages.Playlist))" href="javascript: void(0)" onclick="loadView('@(nameof(Enums.MediaPages.Playlist))')">@(nameof(Enums.MediaPages.Playlist))s</a>
                            <a class="nav-link d-none disabled font-italic font-weight-bold text-dark" data-media-page="@(nameof(Enums.MediaPages.Playlist))">@(nameof(Enums.MediaPages.Playlist))s</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-media-page="@(nameof(Enums.MediaPages.Player))" href="javascript: void(0)" onclick="loadView('@(nameof(Enums.MediaPages.Player))')">Now Playing</a>
                            <a class="nav-link d-none disabled font-italic font-weight-bold text-dark" data-media-page="@(nameof(Enums.MediaPages.Player))">Now Playing</a>
                        </li>
                    </ul>
                    <hr class="d-lg-none" />
                    <div id="@(HtmlControlsRepository.HeaderControlsContainerId)">
                        <button id="@(HtmlControlsRepository.HeaderPreviousButtonId)" class="btn btn-sm btn-outline-secondary" data-tooltip="tooltip" title="Previous"><i class="fa fa-backward"></i></button>
                        <button id="@(HtmlControlsRepository.HeaderPlayButtonId)" class="btn btn-outline-secondary" data-tooltip="tooltip" title="Play"><i class="fa fa-play"></i></button>
                        <button id="@(HtmlControlsRepository.HeaderPauseButtonId)" class="btn btn-outline-secondary d-none" data-tooltip="tooltip" title="Pause"><i class="fa fa-pause"></i></button>
                        <button id="@(HtmlControlsRepository.HeaderNextButtonId)" class="btn btn-sm btn-outline-secondary" data-tooltip="tooltip" title="Next"><i class="fa fa-forward"></i></button>
                        <button id="@(HtmlControlsRepository.HeaderShuffleButtonId)" class="btn btn-sm btn-outline-secondary ml-4" data-tooltip="tooltip" title="Shuffle"><i class="fa fa-random"></i></button>
                        <button id="@(HtmlControlsRepository.HeaderRepeatButtonId)" data-repeat-type="@(nameof(Enums.RepeatTypes.None))" class="btn btn-sm btn-outline-secondary d-none" data-tooltip="tooltip" title="Repeat off">
                            <i class="fa fa-sync"></i>
                        </button>
                        <button id="@(HtmlControlsRepository.HeaderRepeatOneButtonId)" data-repeat-type="@(nameof(Enums.RepeatTypes.RepeatOne))" class="btn btn-sm btn-outline-secondary active d-none" data-tooltip="tooltip" title="Repeat one">
                            <i class="fa fa-xs fa-sync"><sub>1</sub></i>
                        </button>
                        <button id="@(HtmlControlsRepository.HeaderRepeatAllButtonId)" data-repeat-type="@(nameof(Enums.RepeatTypes.RepeatAll))" class="btn btn-sm btn-outline-secondary active d-none" data-tooltip="tooltip" title="Repeat all">
                            <i class="fa fa-sync"></i>
                        </button>
                    </div>
                </div>
            </nav>
        </div>
        <div class="body-content" style="flex: 1 1 auto; overflow-y: auto">
            @RenderBody()
        </div>
        <div class="footer-content" style="flex: 0 0 auto">
            <hr />
            <footer>
                <p class="text-center">&copy; @DateTime.Now.Year - Kendall O. Williams</p>
            </footer>
        </div>
    </div>

    @Html.Partial("~/Views/Shared/Modals/LoadingModal.cshtml")

    <script type="text/javascript" defer="defer">
        function play(btn) {
            var $playButtons = $('button[data-play-id]'),
                $playGroups = $('div[data-play-ids]'),
                success = () => {
                    loadView('@(nameof(Enums.MediaPages.Player))', reload(() => _play()));
                    hideLoading();
                },
                mediaType = $(btn).attr('data-media-type') || '@(nameof(Enums.MediaTypes.Song))',
                data = new FormData(),
                $playData = null;

            showLoading();

            if ($playGroups.length > 0) {
                $playData = $playGroups.map((index, element) => ($(element).attr('data-play-ids').split(',')))
                    .map((index, element) => ({
                        Id: index,
                        Value: parseInt(element),
                        IsSelected: $(btn).attr('data-play-id') === element
                    })
                );
            } else {
                if (mediaType === '@(nameof(Enums.MediaTypes.Podcast))') {
                    $playData = $([{ Id: 0, Value: parseInt($(btn).attr('data-play-id')), IsSelected: true }]);
                } else {
                    $playData = $playButtons.map((index, _btn) => ({
                        Id: index,
                        Value: parseInt($(_btn).attr('data-play-id')),
                        IsSelected: btn.isSameNode(_btn)
                    }));
                }
            }

            set@(nameof(PlayerConfiguration))_@(nameof(PlayerConfiguration.SelectedMediaType))(mediaType);
            data.append('mediaType', mediaType);
            data.append('itemsJSON', JSON.stringify($playData.get()));

            $.ajax({
                type: 'POST',
                url: '@Url.Action("UpdateNowPlaying", "Player")',
                data: data,
                contentType: false,
                success: success,
                processData: false,
                traditional: true
            });
        }

        $(function () {
            $('[data-toggle="popover"]').popover();
            $('[data-tooltip="tooltip"]').tooltip({ trigger: 'hover' });
        });

        function collapseNavbar() {
            $('#divNavbar').collapse('hide');
        }

        function disableNavItem(view) {
            $('a.nav-link[data-media-page][href]').removeClass('d-none');
            $('a.nav-link[data-media-page]:not([href])').addClass('d-none');
            $('a.nav-link[data-media-page=' + view + '][href]').addClass('d-none');
            $('a.nav-link[data-media-page=' + view + ']:not([href])').removeClass('d-none');
        }
    </script>
    @RenderSection("scripts", false)
</body>
</html>