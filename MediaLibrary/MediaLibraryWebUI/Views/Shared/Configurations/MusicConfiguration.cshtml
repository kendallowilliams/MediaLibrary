@model MediaLibraryWebUI.Models.Configurations.MusicConfiguration

<div class="d-none">
    @Html.Hidden(nameof(Model.SelectedAlbumSort), Model.SelectedAlbumSort, new { id = $"txt{nameof(Model.SelectedAlbumSort)}" });
    @Html.Hidden(nameof(Model.SelectedSongSort), Model.SelectedSongSort, new { id = $"txt{nameof(Model.SelectedSongSort)}" });
    @Html.Hidden(nameof(Model.SelectedArtistSort), Model.SelectedArtistSort, new { id = $"txt{nameof(Model.SelectedArtistSort)}" });
    @Html.Hidden(nameof(Model.SelectedArtistId), Model.SelectedArtistId, new { id = $"txt{nameof(Model.SelectedArtistId)}" });
    @Html.Hidden(nameof(Model.SelectedAlbumId), Model.SelectedAlbumId, new { id = $"txt{nameof(Model.SelectedAlbumId)}" });
    @Html.Hidden(nameof(Model.SelectedMusicTab), Model.SelectedMusicTab, new { id = $"txt{nameof(Model.SelectedMusicTab)}" });
    @Html.Hidden(nameof(Model.SelectedMusicPage), Model.SelectedMusicPage, new { id = $"txt{nameof(Model.SelectedMusicPage)}" });
    @Html.Hidden(nameof(Model.ScrollTop), Model.ScrollTop, new { id = $"txt{nameof(Enums.MediaPages.Music)}{nameof(Model.ScrollTop)}" });
</div>

<script type="text/javascript" defer="defer">
    function updateConfiguration(success) {
        $.post('@Url.Action("UpdateConfiguration", "Music")', getMusicConfigurationData(), success);
    }

    function getMusicConfigurationData() {
        return '@(nameof(Model.SelectedAlbumSort))=' + $('#txt@(nameof(Model.SelectedAlbumSort))').val() + '&' +
                '@(nameof(Model.SelectedArtistSort))=' + $('#txt@(nameof(Model.SelectedArtistSort))').val() + '&' +
                '@(nameof(Model.SelectedSongSort))=' + $('#txt@(nameof(Model.SelectedSongSort))').val() + '&' +
                '@(nameof(Model.SelectedAlbumId))=' + $('#txt@(nameof(Model.SelectedAlbumId))').val() + '&' +
                '@(nameof(Model.SelectedArtistId))=' + $('#txt@(nameof(Model.SelectedArtistId))').val() + '&' +
                '@(nameof(Model.SelectedMusicPage))=' + $('#txt@(nameof(Model.SelectedMusicPage))').val() + '&' +
                '@(nameof(Model.SelectedMusicTab))=' + $('#txt@(nameof(Model.SelectedMusicTab))').val() + '&' +
                '@(nameof(Model.ScrollTop))=' + $('#txt@(nameof(Enums.MediaPages.Music))@(nameof(Model.ScrollTop))').val();
    }

    function get@(nameof(Enums.MediaPages.Music))ScrollTop() {
        return parseInt($('#txt@(nameof(Enums.MediaPages.Music))@(nameof(Model.ScrollTop))').val());
    }

    function update@(nameof(Enums.MediaPages.Music))ScrollTop(top) {
        $('#txt@(nameof(Enums.MediaPages.Music))@(nameof(Model.ScrollTop))').val(top);
    }
</script>