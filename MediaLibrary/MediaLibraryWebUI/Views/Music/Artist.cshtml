@model MediaLibraryWebUI.Models.MusicViewModel

@{
    ViewBag.Title = "Artist";
}

<h2>@(Model.SelectedArtist.Name)</h2>
<div>
    <a class="btn btn-outline-secondary" href="@(Url.Action("Index","Music"))"><i class="fa fa-arrow-circle-left"></i></a>
</div>
<hr />
<div class="card">
    <div class="card-header" id="heading-artist-@(Model.SelectedArtist.Id)">
        <h5 class="mb-0">
            Albums
        </h5>
    </div>
    <div class="card-body m-0 p-0">
        @if (Model.SelectedArtist.Albums.Any())
        {
            <ul class="list-group list-group-flush">
                @foreach (var item in Model.SelectedArtist.Albums)
                {
                    <li class="list-group-item">
                        <div class="media">
                            <img class="mr-3 track-img" src="@(Url.Content("~/Content/images/audio.png"))" title="@(item.Title)">
                            <div class="media-body">
                                <h5 class="mt-0">@(item.Title)</h5>
                                <span></span>
                            </div>
                            <div>
                                <a class="btn btn-outline-secondary" href="@(Url.Action("GetAlbum", "Music", new { item.Id }))"><i class="fa fa-list"></i></a>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <span>No albums added.</span>
        }
    </div>
</div>