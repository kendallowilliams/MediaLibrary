@model MediaLibraryWebUI.Models.MusicViewModel

@{
    ViewBag.Title = "Artist";
}

<h2>@(Model.SelectedArtist.Name)</h2>
<div>
    <button class="btn btn-outline-secondary" onclick="backClicked()" data-toggle="tooltip" title="Go back"><i class="fa fa-arrow-circle-left"></i></button>
</div>
<hr />
<div class="card">
    <div class="card-header" id="heading-artist-@(Model.SelectedArtist.Id)">
        <h5 class="mb-0">
            Albums
        </h5>
    </div>
    <div class="card-body m-0 p-0">
        @if (Model.SelectedArtist.Albums.Any())
        {
            <ul class="list-group list-group-flush">
                @foreach (var item in Model.SelectedArtist.Albums.OrderBy(album => album.Title))
                {
                    <li class="list-group-item">
                        <div class="media">
                            <img class="mr-3 track-img" src="@(Url.Content("~/Content/images/audio.png"))" title="@(item.Title)">
                            <div class="media-body">
                                <h5 class="mt-0">@(item.Title)</h5>
                                <span></span>
                            </div>
                            <div>
                                <a class="btn btn-outline-secondary" href="@(Url.Action("GetAlbum", "Music", new { item.Id }))"
                                   data-toggle="tooltip" title="View album"><i class="fa fa-list"></i></a>
                                <button type="button" class="btn btn-outline-secondary" data-playlist="add" data-playlist-url="@(Url.Action("AddAlbumToPlaylist", "Music"))" data-item-id="@(item.Id)"
                                        data-toggle="modal" data-target="#modalAddToPlaylist">
                                    <i class="fa fa-plus" data-toggle="tooltip" title="Add to playlist"></i>
                                </button>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <span>No albums added.</span>
        }
    </div>
</div>

@Html.Partial("~/Views/Shared/Modals/AddToPlaylistModal.cshtml", Model)
@Html.Partial("~/Views/Shared/Configurations/MusicConfiguration.cshtml", Model.Configuration)

@section scripts {
    <script type="text/javascript" defer="defer">
        function backClicked() {
            $('#loadingModal').modal('show');
            $('#txt@(nameof(Model.Configuration.SelectedMusicPage))').val('@(nameof(Enums.MusicPages.Index))');
            updateConfiguration(() => window.location = '@(Url.Action("Index", "Music"))');
        }
    </script>
}
