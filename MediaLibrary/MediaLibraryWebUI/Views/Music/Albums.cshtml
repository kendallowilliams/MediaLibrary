@model MediaLibraryWebUI.Models.MusicViewModel
@using MediaLibraryWebUI.Repositories

@if (Model.AlbumGroups.Any())
{
    <div id="accordion-albums">
        @foreach (var item in Model.AlbumGroups.Select((group, index) => new { Index = index, Group = group }))
        {
            <div class="card">
                <div class="card-header" id="heading-albums-@(item.Index)">
                    <h5 class="mb-0">
                        <button class="btn btn-link w-100 text-left" data-toggle="collapse" data-target="#collapse-albums-@(item.Index)" aria-expanded="@(item.Index == 0 ? "true" : "false")" aria-controls="collapse-albums-@(item.Index)">
                            @(item.Group.Key)
                        </button>
                    </h5>
                </div>

                <div id="collapse-albums-@(item.Index)" class="collapse @(item.Index == 0 ? "show" : "")" aria-labelledby="heading-albums-@(item.Index)" data-parent="#accordion-albums">
                    <ul class="list-group list-group-flush">
                        @foreach (var album in item.Group.OrderBy(a => a.Title))
                        {
                            <li class="list-group-item">
                                <div class="media">
                                    <img class="mr-3 track-img" src="@(Url.Content("~/Content/images/audio.png"))" title="@(album.Title)">
                                    <div class="media-body d-flex flex-column" style="overflow-x: auto">
                                        <h5 class="mt-0" style="flex: 0 0 auto; text-overflow: ellipsis; white-space: nowrap; overflow: hidden">@(album.Title)</h5>
                                        <span data-item-id="@(album.Artist?.Id)" onclick="artistClicked(this)" style="cursor: pointer; flex: 0 0 auto">@(album.Artist?.Name ?? "Unknown Artist")</span>
                                    </div>
                                    <div>
                                        <button class="btn btn-outline-secondary" data-tooltip="tooltip" title="View album" data-item-id="@(album.Id)" onclick="albumClicked(this)">
                                            <i class="fa fa-list"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-secondary @(Model.Playlists.Any() ? string.Empty : "d-none")" data-playlist-url="@(Url.Action("AddAlbumToPlaylist", "Music"))"
                                                data-item-id="@(album.Id)" data-toggle="modal" data-target="#@(HtmlControlsRepository.AddToPlaylistModalId)" data-tooltip="tooltip" title="Add to playlist">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
}
else
{
    <div>No albums.</div>
}
