@model MediaLibraryWebUI.Models.MusicViewModel

<div id="accordion-albums">
    @foreach (var item in Model.AlbumGroups.Select((group, index) => new { Index = index, Group = group }))
    {
        <div class="card">
            <div class="card-header" id="heading-albums-@(item.Index)">
                <h5 class="mb-0">
                    <button class="btn btn-link" data-toggle="collapse" data-target="#collapse-albums-@(item.Index)" aria-expanded="@(item.Index == 0 ? "true" : "false")" aria-controls="collapse-albums-@(item.Index)">
                        @(item.Group.Key)
                    </button>
                </h5>
            </div>

            <div id="collapse-albums-@(item.Index)" class="collapse @(item.Index == 0 ? "show" : "")" aria-labelledby="heading-albums-@(item.Index)" data-parent="#accordion-albums">
                <ul class="list-group list-group-flush">
                    @foreach (var album in item.Group.OrderBy(a => a.Title))
                    {
                        <li class="list-group-item">
                            <div class="media">
                                <img class="mr-3 track-img" src="@(Url.Content("~/Content/images/audio.png"))" title="@(album.Title)">
                                <div class="media-body">
                                    <h5 class="mt-0">@(album.Title)</h5>
                                    <span>@(Model.Artists.FirstOrDefault(artist => artist.Id == album.ArtistId)?.Name ?? "Unknown Artist")</span>
                                </div>
                                <div>
                                    <a class="btn btn-outline-secondary" href="@(Url.Action("GetAlbum", "Music", new { album.Id }))"
                                       data-toggle="tooltip" title="View album"><i class="fa fa-list"></i></a>
                                    <button type="button" class="btn btn-outline-secondary" data-playlist="add" data-playlist-url="@(Url.Action("AddAlbumToPlaylist", "Music"))" data-item-id="@(album.Id)"
                                            data-toggle="modal" data-target="#modalAddToPlaylist">
                                        <i class="fa fa-plus" data-toggle="tooltip" title="Add to playlist"></i>
                                    </button>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
</div>
