@model MediaLibraryWebUI.Models.MusicViewModel

<div id="accordion-songs">
    @foreach (var item in Model.SongGroups.Select((group, index) => new { Index = index, Group = group }))
    {
        <div class="card">
            <div class="card-header" id="heading-songs-@(item.Index)">
                <h5 class="mb-0">
                    <button class="btn btn-link" data-toggle="collapse" data-target="#collapse-songs-@(item.Index)" aria-expanded="@(item.Index == 0 ? "true" : "false")" aria-controls="collapse-songs-@(item.Index)">
                        @(item.Group.Key)
                    </button>
                </h5>
            </div>

            <div id="collapse-songs-@(item.Index)" class="collapse @(item.Index == 0 ? "show" : "")" aria-labelledby="heading-songs-@(item.Index)" data-parent="#accordion-songs">
                <ul class="list-group list-group-flush">
                    @foreach (var song in item.Group.OrderBy(s => s.Title))
                    {
                        <li class="list-group-item">
                            <div class="media">
                                <img class="mr-3 track-img" src="@(Url.Content("~/Content/images/audio.png"))" title="@(song.Title)">
                                <div class="media-body">
                                    <h5 class="mt-0">@(song.Title)</h5>
                                    <span>@(Model.Albums.FirstOrDefault(album => album.Id == song.AlbumId)?.Title ?? "Unknown Album")</span> - <span class="text-muted">@(Model.Artists.FirstOrDefault(artist => artist.Id == song.ArtistId)?.Name)</span>
                                </div>
                                <div>
                                    <button type="button" class="btn btn-outline-secondary" data-play-url="@Url.Action("File", "Music", new { song.Id })" onclick="play(this)"
                                            data-toggle="tooltip" title="Play"><i class="fa fa-play"></i></button>
                                    <button type="button" class="btn btn-outline-secondary" data-playlist="add" data-playlist-url="@(Url.Action("AddTrackToPlaylist", "Music"))" data-item-id="@(song.Id)"
                                            data-toggle="modal" data-target="#modalAddToPlaylist"><i class="fa fa-plus" data-toggle="tooltip" title="Add to playlist"></i></button>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
</div>
