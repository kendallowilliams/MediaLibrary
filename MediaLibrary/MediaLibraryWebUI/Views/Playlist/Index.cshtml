@model MediaLibraryWebUI.Models.PlaylistViewModel

@{
    ViewBag.Title = "Playlists";
}

@if (Model.Playlists.Any())
{
    <div id="accordion-playlists">
        @foreach (var playlist in Model.Playlists)
        {
            <div class="card">
                <div class="card-header" id="heading-albums-@(playlist.Id)">
                    <h5 class="mb-0">
                        <button class="btn btn-link" data-toggle="collapse" data-target="#collapse-albums-@(playlist.Id)" aria-expanded="@(playlist.Id == 0 ? "true" : "false")" aria-controls="collapse-albums-@(playlist.Id)">
                            @(playlist.Name)
                        </button>
                    </h5>
                </div>

                <div id="collapse-albums-@(playlist.Id)" class="collapse @(playlist.Id == 0 ? "show" : "")" aria-labelledby="heading-albums-@(playlist.Id)" data-parent="#accordion-albums">
                    <ul class="list-group list-group-flush">
                        @foreach (var song in Enumerable.Empty<object>())
                        {
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
}
else
{
    <div>No playlists.</div>
}